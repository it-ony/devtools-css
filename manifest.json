{
    "name": "CSS DevTools",
    "version": "0.1",
    "manifest_version": 2,
    "description": "An extra developer panel for live editing css",
    "browser_action": {
        "default_icon": "public/img/editCss_48.png"
    },
    "icons": {
        "128": "public/img/editCss_128.png",
        "48": "public/img/editCss_48.png"
    },
    "devtools_page": "public/chrome/bootstrap.html",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ]
}